    @* Table *@
    <div class="row g-3 mb-4 px-4" >
        <div>
            <h1 class="mt-5" style="font-size: 32px;">List of Menu</h1>
        </div>
       

        @if (Model != null)
        {

            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th class="hide-col">Id</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Menu</th>
                        <th>Price</th>
                        <th style="width: 20%;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Menus)
                    {
                        <tr>
                            <td class="hide-col">@item.Id</td>
                                    <td class="text-center align-middle" >
                                @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                                {
                                    <img src="..@item.ImagePath" alt="@item.Name" width="100" />
                                }
                                else
                                {
                                    <i class="fa-solid fa-image"></i>
                                    <span>No Image</span>
                                }
                            </td>

                            <td class="text-center align-middle" >@item?.Name</td>
                            <td class="align-middle">@item?.Description</td>
                            <td class="align-middle">@item?.MenuType</td>
                            <td class="text-center align-middle" >@item?.Price.ToString()</td>
                            <td class="d-flex justify-content-between align-items-center text-center align-middle" style="min-height: 50px;">
                                <a
                                    class="btn btn-warning" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#itemModal"
                                    data-id="@item.Id"
                                    data-image="..@item.ImagePath"
                                    data-name="@item.Name"
                                    data-price="@item.Price"
                                   data-description="@item.Description"><i class="fa-solid fa-pen-to-square"></i> &nbsp; Update</a>

                                <form asp-controller="Menu" asp-action="DeleteMenu" method="post" onsubmit="return confirm('Are you sure you want to delete this menu?');">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger mx-2">
                                        <i class="fa-solid fa-trash"></i> &nbsp; Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No menu items found.</p>
        }
    </div>
</div>

